<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp">

    <ImageView
        android:id="@+id/searchImage_imageView"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/image_sample"/>

    <TextView
        android:id="@+id/searchTitle_textView"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="@string/search_title_text"
        android:textSize="16sp"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/searchDate_textView"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="@string/search_date_text"
        android:textSize="14sp"/>

</LinearLayout>