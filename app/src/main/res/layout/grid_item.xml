<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="10dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/searchImage_imageView"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/image_sample" />

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/searchTitle_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/search_title_text"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/searchDate_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/search_date_text"
                android:textSize="14sp" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/bookmark_imageButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_bookmark"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"
            android:layout_marginStart="10dp"
            android:layout_gravity="center"/>


    </LinearLayout>


</LinearLayout>